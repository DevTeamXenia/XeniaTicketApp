<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/printerTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_device_printer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- Falcon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgFalcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_falcon"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/bg_printer_unselected"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Falcon"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- POS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgBPOS200Max"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_bposemax"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/bg_printer_unselected"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B200MAX"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Sunmi -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgKiosk"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_kiosk"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/bg_printer_unselected"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kiosk"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgPine"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/pinelab"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:background="@drawable/bg_printer_unselected"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pinelab A910 Series"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:backgroundTint="@color/primaryColor"
        android:enabled="true"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:cornerRadius="10dp" />



</LinearLayout>