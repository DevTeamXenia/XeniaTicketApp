<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>





        <LinearLayout
            android:id="@+id/linProof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAadhar"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_aadhar"
                android:background="@drawable/image_selector"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/imgPanCard"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_below="@+id/cameraView"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_pan_card"
                android:background="@drawable/image_selector"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/imgDrivingLicence"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_below="@+id/cameraView"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_lincence"
                android:background="@drawable/image_selector"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/todo"/>


        </LinearLayout>


        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linProof"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editTextId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtId"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:focusable="true"
            android:visibility="invisible"
            android:focusableInTouchMode="true"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textAllCaps="true"
            android:maxLength="16"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextId"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtName"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLength="16"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/txtPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextName"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/phone_number"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txtPhoneNumber"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/phone_number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="RtlSymmetry" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/todo">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto"
                android:textSize="28sp"
                app:cornerRadius="10dp"
                tools:ignore="RtlSymmetry" />


        </RelativeLayout>




    </RelativeLayout>


</LinearLayout>